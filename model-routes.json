{
  "routes": [
    {
      "path": "/help",
      "request": "GET",
      "description": "obtain this information",
      "token-required": false,
      "response": [
        {
          "status": 200,
          "response-type": "JSON"
        }
      ]
    },
    {
      "path": "/login",
      "request": "POST",
      "description": "connect one user to the backend",
      "body-description": "{email: text, password: text}",
      "token-required": false,
      "response": [
        {
          "status": 200,
          "response-type": "JSON"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "incorrect email or password"
        }
      ]
    },
    {
      "path": "/api/connect",
      "request": "GET",
      "description": "returns status 200 only if the client bears a valid token",
      "token-required": true,
      "response": [
        {
          "status": 200,
          "response-type": "JSON"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        }
      ]
    },
    {
      "path": "/api/emails",
      "request": "GET",
      "description": "obtain all the emails in quarantine of the user",
      "token-required": true,
      "response": [
        {
          "status": 200,
          "response-type": "JSON"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        }
      ]
    },
    {
      "path": "/api/emails/:id",
      "request": "DELETE",
      "params": { "id": "number" },
      "description": "delete one email in quarantine",
      "token-required": true,
      "response": [
        {
          "status": 204,
          "response-type": "Text"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        },
        {
          "status": 404,
          "response-type": "Text",
          "description": "email not found in quarantine"
        },
        {
          "status": 502,
          "response-type": "Text",
          "description": "error in database or in backend server"
        }
      ]
    },
    {
      "path": "/api/user",
      "request": "GET",
      "description": "obtain the name and the email adress of the user",
      "token-required": true,
      "response": [
        {
          "status": 200,
          "response-type": "JSON"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        }
      ]
    },
    {
      "path": "/api/emails/restore/:id",
      "request": "PUT",
      "params": { "id": "number" },
      "description": "changes the status of one email in quarantine so that it will be restored to the user mailbox",
      "body-description": "{email: $email}",
      "token-required": true,
      "response": [
        {
          "status": 201,
          "response-type": "Text"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        },
        {
          "status": 404,
          "response-type": "Text",
          "description": "email not found in quarantine"
        },
        {
          "status": 502,
          "response-type": "Text",
          "description": "error in database or in backend server"
        }
      ]
    },
    {
      "path": "/api/whitelist/:id",
      "request": "PUT",
      "params": { "id": "number" },
      "description": "put the address from which the email was sent in the whitelist",
      "token-required": false,
      "response": [
        {
          "status": 201,
          "response-type": "Text"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        },
        {
          "status": 404,
          "response-type": "Text",
          "description": "email not found in quarantine"
        },
        {
          "status": 502,
          "response-type": "Text",
          "description": "error in database or in backend server"
        }
      ]
    },
    {
      "path": "/api/blacklist/:id",
      "request": "PUT",
      "params": { "id": "number" },
      "description": "put the address from which the email was sent in the whitelist",
      "token-required": true,
      "response": [
        {
          "status": 201,
          "response-type": "Text"
        },
        {
          "status": 403,
          "response-type": "Text",
          "description": "invalid client token"
        },
        {
          "status": 404,
          "response-type": "Text",
          "description": "email not found in quarantine"
        },
        {
          "status": 502,
          "response-type": "Text",
          "description": "error in database or in backend server"
        }
      ]
    }
  ]
}
